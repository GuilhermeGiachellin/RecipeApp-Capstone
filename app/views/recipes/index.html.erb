<p id="notice"><%= notice %></p>
<section>
  <h1>Recipes</h1>
  <% @recipes.each do |recipe| %>
    <article>
      <h2><%= recipe.name %></h2>
      <p><%= recipe.description %></p>
      <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %>
    </article>
  <% end %>
</section>
