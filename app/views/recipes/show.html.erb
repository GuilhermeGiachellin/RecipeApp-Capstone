<p id="notice"><%= notice %></p>
<section>
  <h2><%= @recipe.name %></h2> | 

  <%= link_to 'Edit', edit_recipe_path(@recipe.id) %> |
  <%= link_to 'Remove', recipe_path(@recipe.id), method: :delete, data: { confirm: 'Are you sure?' } %>
  
  <p>
    <strong>Preparation time:</strong>
    <%= @recipe.preparation_time %>
  </p>
  <p>
    <strong>Cooking time:</strong>
    <%= @recipe.cooking_time %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @recipe.description %>
  </p>
  <p>
    <strong>Public:</strong>
    <%= @recipe.public %>
  </p>
  <%= link_to 'Generate shopping list', recipes_path %>
  <%= link_to 'Add ingredient',   new_recipe_recipe_food_path(@recipe) %>

  <br>

  <table>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Value</th>
      <th>Action</th>
    </tr>
    <% @foods.each do |recipe_food| %>
      <tr>
        <td><%= recipe_food.food.name %></td>
        <td><%= recipe_food.quantity %> <%= recipe_food.food.measurament_unit %></td>
        <td><%= recipe_food.food.price %></td>
        <td><%= link_to 'Modify', edit_recipe_recipe_food_path(params[:id],recipe_food) %> <%= link_to 'Remove', recipe_recipe_food_path(params[:id],recipe_food), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
</section>


<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
