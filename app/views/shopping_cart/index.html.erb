<section class="container">
  <h2 class="page_titles">Shopping Cart</h2>

<p class="recipe_info">Amount of food items to buy: <%= @foods.count %></p>
<p class="recipe_info">Total value: $<%= total_value_needed(@foods) %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>          
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.amount_food(@current_user) %></td>
        <td>$<%= food.amount_food(@current_user) * food.price %></td>        
      </tr>
     <% end %> 
  </tbody>
</table>
</section>
